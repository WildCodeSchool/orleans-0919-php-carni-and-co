{% extends 'layout_admin.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ product.reference }}</td>
            </tr>
            <tr>
                <th>Vegan</th>
                <td>{{ product.vegan ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ product.organic ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Cereale</th>
                <td>{{ product.cereale ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Source</th>
                <td>{{ product.source }}</td>
            </tr>
            <tr>
                <th>Code barre</th>
                <td>{{ product.barcode }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
