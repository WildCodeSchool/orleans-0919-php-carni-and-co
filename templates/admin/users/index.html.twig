{% extends 'layout_admin.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <h1 class="h1-Admin">Liste des utilisateurs</h1>

    <div class="col-3">
        {{ form_start(form,{'method': 'GET'}) }}
        {{ form_widget(form) }}
        <button class="btn btn-secondary w-100"><i class="fas fa-search"></i> {{ button_label|default('Rechercher') }}</button>
        {{ form_end(form) }}
    </div>

    <table class="table-admin">
        <thead class="header-table-admin">
            <tr>
                <th>Identifiant</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="body-table-admin">
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">
                        <button class="btn btn-secondary mb-4">
                            <i class="far fa-eye"></i> Voir
                        </button>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun utilisateur trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(users) }}
{% endblock %}
