{% extends 'admin/index.html.twig' %}

{% block title %}Ingredient{% endblock %}

{% block body %}
    <h1 class="h1-Admin">Ingredient : {{ ingredient.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ ingredient.name }}</td>
            </tr>
            <tr>
                <th>Type précisé</th>
                <td>{{ ingredient.precisedType ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Morceau précisé</th>
                <td>{{ ingredient.precisedPart ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ ingredient.note }}</td>
            </tr>
            <tr>
                <th>Origine</th>
                <td>{{ ingredient.origin.name ?? 'Non précisée'}}</td>
            </tr>
            <tr>
                <th>Forme</th>
                <td>{{ ingredient.shape.name ?? 'Non précisée'}}</td>
            </tr>
            <tr>
                <th>Type de nutriment</th>
                <td>{{ ingredient.nutrientType.nutrient ?? 'Non précisée'}}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('ingredient_index') }}"><button class="btn btn-secondary m-1">Retour à la liste</button></a>

    <a href="{{ path('ingredient_edit', {'id': ingredient.id}) }}"><button class="btn btn-secondary m-1">Modifier</button></a>

    {{ include('/admin/ingredient/_delete_form.html.twig') }}
{% endblock %}
